extends layout

block content
  .inner
  h2 Edit Your Acount
  form(action="/account" method="post")
    label(for="name") Name
    input(type="text" name="name" value=user.name)
    label(for="email") Email
    input(type="text" name="email" value=user.email)
    input.button(type="submit" value="Update My Acount")